<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#fff">
    <ImageView android:id="@+id/imageView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@color/graywhite"
        />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/imageView"
        android:textColor="@color/oil"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="18sp" />

    <TextView android:id="@+id/descTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/imageView"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="14sp"
        />
    <ImageView android:id="@+id/iconView"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_place_grey_24dp"
        android:layout_below="@id/descTextView"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/imageView"
        />

    <TextView android:id="@+id/locationTextView"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_below="@id/descTextView"
        android:layout_toRightOf="@id/iconView"
        android:layout_marginLeft="2dp"
        android:text="0.0km 未知地点"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"
        />
</RelativeLayout>